<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_layout_anchor_more"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_section_header" />

        <TextView
            android:id="@+id/item_txt_anchor_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/arrow_gray_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/anchor_item_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_img_anchor_icon1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/anchor" />

                    <TextView
                        android:id="@+id/item_txt_anchor_name1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/item_img_anchor_icon1"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="素颜女神小竹"
                        android:textColor="@color/anchor_text_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_txt_anchor_info1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/anchor_item_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_img_anchor_icon2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/anchor" />

                    <TextView
                        android:id="@+id/item_txt_anchor_name2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/item_img_anchor_icon2"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="素颜女神小竹"
                        android:textColor="@color/anchor_text_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_txt_anchor_info2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout2"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/anchor_item_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_img_anchor_icon3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="200dp"
                        android:src="@mipmap/anchor" />

                    <TextView
                        android:id="@+id/item_txt_anchor_name3"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="素颜女神小竹"
                        android:textColor="@color/anchor_text_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_txt_anchor_info3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout3"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>