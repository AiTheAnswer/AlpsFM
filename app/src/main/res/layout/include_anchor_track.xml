<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_anchor_details_track_relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/fragment_anchor_details_track_icon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            app:border="true"
            app:border_color="@android:color/white"
            app:border_width="3dp" />

        <com.pkmmte.view.CircularImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/flag_player_play" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/fragment_anchor_details_track_icon1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_anchor_details_track_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxHeight="35dp"
                android:minHeight="10dp"
                android:paddingTop="15dp"
                android:textSize="16sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/item_img_album_track_play_icon1"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/album_play_count" />

                <TextView
                    android:id="@+id/fragment_anchor_details_track_play_count1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/item_img_album_track_play_icon1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/fragment_img_anchor_details_track_duration1"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/fragment_anchor_details_track_play_count1"
                    android:src="@mipmap/ic_item_duration" />

                <TextView
                    android:id="@+id/fragment_anchor_details_track_duration1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/fragment_img_anchor_details_track_duration1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_anchor_details_track_relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/fragment_anchor_details_track_icon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            app:border="true"
            app:border_color="@android:color/white"
            app:border_width="3dp" />

        <com.pkmmte.view.CircularImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/flag_player_play" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/fragment_anchor_details_track_icon2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_anchor_details_track_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxHeight="35dp"
                android:minHeight="10dp"
                android:paddingTop="15dp"
                android:textSize="16sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/item_img_album_track_play_icon2"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/album_play_count" />

                <TextView
                    android:id="@+id/fragment_anchor_details_track_play_count2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/item_img_album_track_play_icon2"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/fragment_img_anchor_details_track_duration2"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/fragment_anchor_details_track_play_count2"
                    android:src="@mipmap/ic_item_duration" />

                <TextView
                    android:id="@+id/fragment_anchor_details_track_duration2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/fragment_img_anchor_details_track_duration2"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>