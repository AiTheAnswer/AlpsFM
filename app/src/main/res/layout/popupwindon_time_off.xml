<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:id="@+id/pop_layout_no_open"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="不开启"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/pop_img_no_open"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/check_selected" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_layout_current_track"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="播完当前声音"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pop_time_off_countdown_current_track"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textColor="#FF4500"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
             />

        <ImageView
            android:id="@+id/pop_img_current_track"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/check_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_layout_ten"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="十分钟"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pop_time_off_countdown_ten"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="#FF4500"
            android:gravity="center_vertical"
             />

        <ImageView
            android:id="@+id/pop_img_ten"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/check_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_layout_twenty"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="20分钟"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pop_time_off_countdown_twenty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="#FF4500"
            android:gravity="center_vertical"
             />

        <ImageView
            android:id="@+id/pop_img_twenty"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/check_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_layout_thirty"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="30分钟"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pop_time_off_countdown_thirty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="#FF4500"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/pop_img_thirty"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/check_normal" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/pop_layout_sixty"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="60分钟"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pop_time_off_countdown_sixty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="#FF4500"
            android:gravity="center_vertical"
             />

        <ImageView
            android:id="@+id/pop_img_sixty"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/check_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_layout_ninety"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="90分钟"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pop_time_off_countdown_ninety"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="#FF4500"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/pop_img_ninety"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/check_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/pop_time_off_close"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="关闭"
        android:textSize="15sp" />


</LinearLayout>